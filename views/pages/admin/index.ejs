<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/admin/style.css">
    <link rel="shortcut icon" href="/img/logo-white.ico" />
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <title>Dashboard</title>
</head>

<body>
    <%- include('../../partials/sidebar') %>
    <section class="home-section">
        <%- include('../../partials/navbar') %>
        <div class="home-content">
            <div class="overview-boxes">
                <div class="box">
                    <div class="right-side">
                        <div class="box-topic">Total Order</div>
                        <div class="number">40,876</div>
                        <div class="indicator">
                            <i class='bx bx-up-arrow-alt'></i>
                            <span class="text">Up from yesterday</span>
                        </div>
                    </div>
                    <i class='bx bx-cart-alt cart'></i>
                </div>
                <div class="box">
                    <div class="right-side">
                        <div class="box-topic">Total Sales</div>
                        <div class="number">38,876</div>
                        <div class="indicator">
                            <i class='bx bx-up-arrow-alt'></i>
                            <span class="text">Up from yesterday</span>
                        </div>
                    </div>
                    <i class='bx bxs-cart-add cart two'></i>
                </div>
                <div class="box">
                    <div class="right-side">
                        <div class="box-topic">Total Profit</div>
                        <div class="number">$12,876</div>
                        <div class="indicator">
                            <i class='bx bx-up-arrow-alt'></i>
                            <span class="text">Up from yesterday</span>
                        </div>
                    </div>
                    <i class='bx bx-cart cart three'></i>
                </div>
                <div class="box">
                    <div class="right-side">
                        <div class="box-topic">Total Return</div>
                        <div class="number">11,086</div>
                        <div class="indicator">
                            <i class='bx bx-down-arrow-alt down'></i>
                            <span class="text">Down From Today</span>
                        </div>
                    </div>
                    <i class='bx bxs-cart-download cart four'></i>
                </div>
            </div>

            <div class="sales-boxes">
                <div class="recent-sales box">
                    <div class="title">Recent Sales</div>
                    <table class="table row" style="width: 100%;">
                        <thead>
                            <tr>
                                <th scope="col" style="text-align:start">Date</th>
                                <th scope="col" style="text-align:start">Customer</th>
                                <th scope="col" style="text-align:start">Status</th>
                                <th scope="col" style="text-align:start">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% recent_sales.forEach(function(order) { %>
                            <tr>
                                <td style="text-align:start"><%= order.createdAt.toDateString() %></td>
                                <td style="text-align:start"><%= order.user.username %> </td>
                                <td style="text-align:start"><%= order.status %> </td>
                                <td style="text-align:start"><%= order.subTotal %> </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                    <div class="button row" style="margin-top: 1rem">
                        <a href="/admin/orders">See All</a>
                    </div>
                </div>
                <div class="top-sales box">
                    <div class="title">Top Seling Product</div>
                    <table class="table" style="width: 100%;">
                        <thead>
                          <tr>
                            <th scope="col" style="text-align:start">Products</th>
                            <th scope="col" style="text-align:start">Sales</th>
                          </tr>
                        </thead>
                        <tbody>
                        <% best_sellers.forEach(function(sale) { %>
                          <tr>
                            <td scope="row" style="text-align:start" class="name" title="<%= sale.bookID.name %>"><%= sale.bookID.name %></td>
                            <td style="text-align:center"><%= sale.sales %> </td>
                          </tr>
                        <% }) %>
                        </tbody>
                    </table>
                    <div class="button row" style="margin-top: 1rem">
                        <a href="/admin/products">See All</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="/script/admin/sidebar.js"></script>
</body>
</html>